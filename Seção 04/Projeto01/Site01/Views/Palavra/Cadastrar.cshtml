@model Site01.Models.Palavra
@{
    Layout = "_Layout";
    ViewBag.Title = "Palavra - Cadastrar";
}

<form method="post">

    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" name="nome" value="@Model.Nome" class="form-control" id="nome" placeholder="Digite um nome">
        @Html.ValidationMessage("nome")
    </div>
    <div class="mb-3">
        <label for="nivel" class="form-label">E-mail</label>

        <select name="nivel" class="form-control">
            @foreach (var nivel in ViewBag.Nivel)
            {
                if (nivel.Id == Model.Nivel)
                {
                    <option value="@nivel.Id" selected>@nivel.Nome</option>
                }
                else
                {
                    <option value="@nivel.Id">@nivel.Nome</option>
                }   
            }
        </select>

        @*<input type="text" name="nivel" value="@Model.Nivel" class="form-control" id="nivel" placeholder="Digite o nivel: 1 - facil, 2 - medio, 3 - dificil">*@
        @Html.ValidationMessage("nivel")
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
@ViewBag.Mensagem
