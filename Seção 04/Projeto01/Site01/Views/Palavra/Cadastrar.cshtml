@model  Site01.Models.Palavra
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

</head>
<body>

    <div class="container">
        <form method="post">

            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" name="nome" value="@Model.Nome" class="form-control" id="nome" placeholder="Digite um nome">
                @Html.ValidationMessage("nome")
            </div>
            <div class="mb-3">
                <label for="nivel" class="form-label">E-mail</label>
                <input type="text" name="nivel" class="form-control" id="nivel" placeholder="Digite o nivel: 1 - facil, 2 - medio, 3 - dificil">
                @Html.ValidationMessage("nivel")
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
        @ViewBag.Mensagem
    </div>

</body>
</html>
